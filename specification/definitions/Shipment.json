{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Shipment.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "recipient_address",
        "sender_address",
        "service",
        "weight"
      ],
      "additionalProperties": false,
      "properties": {
        "recipient_address": {
          "$ref": "#/definitions/AddressAttributes"
        },
        "sender_address": {
          "$ref": "#/definitions/AddressAttributes"
        },
        "pickup_location": {
          "type": "object",
          "required": [
            "code",
            "address"
          ],
          "properties": {
            "code": {
              "type": "string",
              "example": "123456"
            },
            "address": {
              "$ref": "#/definitions/AddressAttributes"
            }
          }
        },
        "description": {
          "type": "string",
          "example": "order #8008135"
        },
        "price": {
          "$ref": "../includes/read-only-price.json"
        },
        "insurance": {
          "$ref": "../includes/price.json"
        },
        "barcode": {
          "readOnly": true,
          "type": "string",
          "example": "3SABCD0123456789"
        },
        "weight": {
          "type": "number",
          "example": 24
        },
        "service": {
          "type": "object",
          "required": [
            "code"
          ],
          "properties": {
            "code": {
              "type": "string",
              "example": "1203A"
            },
            "name": {
              "type": "string",
              "example": "Parcel to Parcelshop"
            }
          }
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "code"
            ],
            "additionalProperties": false,
            "properties": {
              "code": {
                "type": "string",
                "example": "0123A"
              },
              "name": {
                "type": "string",
                "example": "signature"
              }
            }
          }
        },
        "physical_properties": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "height": {
              "type": "number",
              "example": 24
            },
            "width": {
              "type": "number",
              "example": 50
            },
            "length": {
              "type": "number",
              "example": 50
            },
            "volume": {
              "type": "number",
              "example": 50
            },
            "weight": {
              "type": "number",
              "example": 24
            }
          }
        },
        "files": {
          "type": "array",
          "items": {
            "readOnly": true,
            "type": "object",
            "required": [
              "resource_type",
              "data"
            ],
            "properties": {
              "resource_type": {
                "type": "string",
                "enum": [
                  "label",
                  "printcode",
                  "invoice"
                ],
                "example": "label"
              },
              "mime_type": {
                "type": "string",
                "example": "application/pdf"
              },
              "extension": {
                "type": "string",
                "example": "pdf"
              },
              "data": {
                "type": "string",
                "example": "data:application/pdf;base64,iVBORw0KTaIx+wMm04spN/rQWAAAAABJRU5ErkJggg=="
              }
            }
          }
        }
      }
    }
  }
}
