{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Shipment.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "recipient_address",
        "sender_address",
        "service",
        "weight"
      ],
      "additionalProperties": false,
      "properties": {
        "recipient_address": {
          "type": "object",
          "required": [
            "street_1",
            "city",
            "country_code"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": "../properties/Address.json"
          }
        },
        "sender_address": {
          "type": "object",
          "required": [
            "street_1",
            "city",
            "country_code"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": "../properties/Address.json"
          }
        },
        "pickup_location": {
          "type": "object",
          "required": [
            "code",
            "address"
          ],
          "properties": {
            "code": {
              "type": "string",
              "example": "123456"
            },
            "address": {
              "type": "object",
              "required": [
                "street_1",
                "city",
                "country_code"
              ],
              "additionalProperties": false,
              "properties": {
                "$ref": "../properties/Address.json"
              }
            }
          }
        },
        "description": {
          "type": "string",
          "example": "order #8008135"
        },
        "price": {
          "$ref": "../includes/read-only-price.json"
        },
        "insurance": {
          "$ref": "../includes/price.json"
        },
        "barcode": {
          "readOnly": true,
          "type": "string",
          "example": "3SABCD0123456789"
        },
        "weight": {
          "type": "number",
          "example": 24
        },
        "service": {
          "type": "object",
          "required": [
            "code"
          ],
          "properties": {
            "code": {
              "type": "string",
              "example": "1203A"
            },
            "name": {
              "type": "string",
              "example": "Parcel to Parcelshop"
            }
          }
        },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "code"
            ],
            "additionalProperties": false,
            "properties": {
              "code": {
                "type": "string",
                "example": "0123A"
              },
              "name": {
                "type": "string",
                "example": "signature"
              }
            }
          }
        },
        "physical_properties": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "height": {
              "type": "number",
              "example": 24
            },
            "width": {
              "type": "number",
              "example": 50
            },
            "length": {
              "type": "number",
              "example": 50
            },
            "volume": {
              "type": "number",
              "example": 50
            },
            "weight": {
              "type": "number",
              "example": 24
            }
          }
        },
        "customs": {
          "type": "object",
          "properties": {
            "content_type": {
              "type": "string",
              "enum": [
                "merchandise",
                "sample_merchandise",
                "returned_merchandise",
                "documents",
                "gifts"
              ],
              "example": "merchandise"
            },
            "invoice_number": {
              "type": "string",
              "example": "9000"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "sku",
                  "description",
                  "item_value",
                  "quantity",
                  "hs_code",
                  "origin_country_code"
                ],
                "additionalProperties": false,
                "properties": {
                  "sku": {
                    "type": "string",
                    "minLength": 1,
                    "example": "123456789"
                  },
                  "description": {
                    "type": "string",
                    "minLength": 1,
                    "example": "OnePlus X"
                  },
                  "item_value": {
                    "$ref": "../includes/price.json"
                  },
                  "quantity": {
                    "type": "number",
                    "example": 2
                  },
                  "hs_code": {
                    "type": "string",
                    "pattern": "^[0-9.]+$",
                    "example": "8517.12.00"
                  },
                  "origin_country_code": {
                    "$ref": "../includes/country-code.json"
                  }
                }
              }
            },
            "non_delivery": {
              "type": "string",
              "enum": [
                "return",
                "abandon"
              ],
              "example": "return"
            },
            "incoterm": {
              "type": "string",
              "enum": [
                "DDU",
                "DDP"
              ],
              "example": "DDU"
            }
          }
        },
        "files": {
          "type": "array",
          "readOnly": true,
          "items": {
            "type": "object",
            "required": [
              "resource_type",
              "data"
            ],
            "properties": {
              "resource_type": {
                "type": "string",
                "enum": [
                  "label",
                  "printcode",
                  "invoice"
                ],
                "example": "label"
              },
              "mime_type": {
                "type": "string",
                "example": "application/pdf"
              },
              "extension": {
                "type": "string",
                "example": "pdf"
              },
              "data": {
                "type": "string",
                "example": "data:application/pdf;base64,iVBORw0KTaIx+wMm04spN/rQWAAAAABJRU5ErkJggg=="
              }
            }
          }
        }
      }
    }
  }
}
