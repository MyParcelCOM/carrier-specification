{
  "type": "object",
  "required": [
    "id",
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Status.json"
    },
    "id": {
      "readOnly": true,
      "type": "string",
      "example": "B01",
      "description": "Status identifier used by the carrier."
    },
    "attributes": {
      "type": "object",
      "required": [
        "description",
        "timestamp"
      ],
      "properties": {
        "myparcelcom_code": {
          "type": "string",
          "example": "shipment-registered",
          "description": "Status code used by MyParcel.com"
        },
        "description": {
          "type": "string",
          "example": "Confirmed at destination",
          "description": "Description of the carrier status."
        },
        "category": {
          "type": "string",
          "example": "default",
          "description": "The category code of this status update. If the value is not `default`, some action might be required by the sender or recipient."
        },
        "timestamp": {
          "type": "number",
          "example": 1504801719,
          "description": "Unix timestamp (UTC) of the status update."
        },
        "physical_properties": {
          "$ref": "../includes/physical-properties.json"
        }
      }
    }
  }
}
