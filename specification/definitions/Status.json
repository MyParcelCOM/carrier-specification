{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Status.json"
    },
    "id": {
      "readOnly": true,
      "type": "string",
      "example": "B01",
      "description": "status identifier used by the carrier"
    },
    "attributes": {
      "type": "object",
      "required": [
        "myparcelcom_code",
        "description",
        "timestamp"
      ],
      "additionalProperties": false,
      "properties": {
        "myparcelcom_code": {
          "type": "string",
          "example": "shipment_registered",
          "description": "status code used by MyParcel.com"
        },
        "description": {
          "type": "string",
          "example": "Confirmed at destination",
          "description": "description of the carrier status"
        },
        "timestamp": {
          "type": "number",
          "example": 1504801719,
          "description": "unix timestamp of the status update"
        }
      }
    }
  }
}
