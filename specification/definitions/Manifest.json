{
  "type": "object",
  "required": [
    "type",
    "attributes",
    "relationships"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Manifest.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "name",
        "address"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "my-manifest"
        },
        "address": {
          "type": "object",
          "required": [
            "street_1",
            "city",
            "country_code"
          ],
          "properties": {
            "$ref": "../properties/Address.json"
          }
        },
        "files": {
          "readOnly": true,
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "resource_type",
              "data"
            ],
            "properties": {
              "resource_type": {
                "$ref": "../includes/resource-type.json"
              },
              "mime_type": {
                "type": "string",
                "example": "application/pdf"
              },
              "extension": {
                "type": "string",
                "example": "pdf"
              },
              "data": {
                "type": "string",
                "example": "iVBORw0KTaIx+wMm04spN/rQWAAAAABJRU5ErkJggg=="
              }
            }
          }
        }
      }
    },
    "relationships": {
      "type": "object",
      "required": [
        "shipments"
      ],
      "additionalProperties": false,
      "properties": {
        "shipments": {
          "$ref": "#/definitions/ShipmentRelationship"
        }
      }
    }
  }
}
