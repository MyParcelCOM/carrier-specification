{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/PickupDropoffLocation.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "address"
      ],
      "additionalProperties": false,
      "properties": {
        "address": {
          "type": "object",
          "required": [
            "street_1",
            "city",
            "country_code"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": "../properties/Address.json"
          }
        },
        "opening_hours": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "day",
              "open",
              "closed"
            ],
            "additionalProperties": false,
            "properties": {
              "day": {
                "type": "string",
                "enum": [
                  "Monday",
                  "Tuesday",
                  "Wednesday",
                  "Thursday",
                  "Friday",
                  "Saturday",
                  "Sunday"
                ],
                "example": "Monday"
              },
              "open": {
                "$ref": "../includes/time.json"
              },
              "closed": {
                "$ref": "../includes/time.json"
              }
            }
          },
          "maxItems": 7
        },
        "position": {
          "type": "object",
          "required": [
            "latitude",
            "longitude"
          ],
          "additionalProperties": false,
          "properties": {
            "latitude": {
              "type": "number",
              "example": 52.3050097
            },
            "longitude": {
              "type": "number",
              "example": 4.689905
            },
            "distance": {
              "type": "number",
              "example": 1337,
              "description": "Distance to the location in meters"
            }
          }
        }
      }
    }
  }
}
