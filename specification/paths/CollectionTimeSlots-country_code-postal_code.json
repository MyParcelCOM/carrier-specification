{
  "get": {
    "tags": [
      "Collections"
    ],
    "summary": "Get collection time slots by country and postal code.",
    "description": "This endpoint retrieves collection time slots offered by the carrier by country and postal code. These time slots can be used as `collection_time` of a collection.",
    "parameters": [
      {
        "in": "path",
        "name": "country_code",
        "required": true,
        "type": "string",
        "description": "Country code in ISO 3166-1 alpha-2 format."
      },
      {
        "in": "path",
        "name": "postal_code",
        "required": true,
        "type": "string",
        "description": "Postal code of the address to search nearby."
      },
      {
        "name": "date_from",
        "in": "query",
        "description": "Date string in ISO 8601 format or unix timestamp.",
        "schema": {
          "type": [
            "string",
            "number"
          ]
        }
      },
      {
        "name": "date_to",
        "in": "query",
        "description": "Date string in ISO 8601 format or unix timestamp.",
        "schema": {
          "type": [
            "string",
            "number"
          ]
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the locations.",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/CollectionTimeSlot"
              }
            },
            "meta": {
              "$ref": "../includes/pagination-meta.json"
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "additionalProperties": false,
              "properties": {
                "self": {
                  "type": "string",
                  "example": "https://api.carrier.com/collection-time-slots/NL/1234AB?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "https://api.carrier.com/collection-time-slots/NL/1234AB?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "https://api.carrier.com/collection-time-slots/NL/1234AB?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "https://api.carrier.com/collection-time-slots/NL/1234AB?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "https://api.carrier.com/collection-time-slots/NL/1234AB?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}
