{
  "post": {
    "tags": [
      "Shipments"
    ],
    "summary": "Create a shipment.",
    "description": "This endpoint creates a new shipment in the system of the carrier.",
    "parameters": [
      {
        "in": "body",
        "name": "shipment",
        "description": "The shipment object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "$ref": "#/definitions/Shipment"
            },
            "meta": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "track_trace": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "description": "Indicates whether or not the carrier should send track and trace emails for this shipment.",
                      "example": false,
                      "default": true
                    }
                  }
                },
                "label_mime_type": {
                  "type": "string",
                  "description": "The requested mime-type for the label for this shipment.",
                  "example": "application/pdf"
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "201": {
        "description": "The shipment is created.",
        "schema": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "$ref": "#/definitions/Shipment"
            }
          }
        }
      }
    }
  }
}
