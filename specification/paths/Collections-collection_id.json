{
  "patch": {
    "tags": [
      "Collections"
    ],
    "summary": "Update a collection.",
    "description": "This endpoint is used to update collections.",
    "parameters": [
      {
        "name": "collection_id",
        "in": "path",
        "description": "ID of the collection to be updated. Can differ from the `myparcelcom_collection_id` attribute!",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "requestBody": {
      "description": "The collection object to be updated.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/Collection"
                  },
                  {
                    "required": [
                      "id"
                    ],
                    "properties": {
                      "attributes": {
                        "type": "object",
                        "properties": {
                          "register": {
                            "type": "boolean",
                            "example": true,
                            "description": "Indicates whether the collection should be registered at the carrier."
                          }
                        }
                      },
                      "relationships": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "shipments": {
                            "$ref": "#/components/schemas/ShipmentsRelationship"
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Updated the collection.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/CollectionResponse"
                    },
                    {
                      "properties": {
                        "attributes": {
                          "properties": {
                            "register": {
                              "type": "boolean",
                              "example": true,
                              "description": "Indicates whether the collection should be registered at the carrier."
                            },
                            "tracking_code": {
                              "type": "string",
                              "description": "Optional tracking code returned by the carrier.",
                              "example": "TR4CKMYC0LL3CT10N"
                            },
                            "files": {
                              "type": "array",
                              "items": {
                                "allOf": [
                                  {
                                    "$ref": "#/components/schemas/File"
                                  },
                                  {
                                    "required": [
                                      "resource_type",
                                      "data"
                                    ]
                                  }
                                ]
                              }
                            }
                          }
                        },
                        "relationships": {
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "shipments": {
                              "$ref": "#/components/schemas/ShipmentsRelationship"
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "delete": {
    "tags": [
      "Collections"
    ],
    "summary": "Void a collection.",
    "description": "This endpoint is used to void collections. Not all carriers support voiding of registered shipments.",
    "parameters": [
      {
        "name": "collection_id",
        "in": "path",
        "description": "ID of the collection to be voided. Can differ from the `myparcelcom_collection_id` attribute!",
        "required": true,
        "schema": {
          "$ref": "#/components/schemas/Uuid"
        }
      }
    ],
    "responses": {
      "204": {
        "description": "The collection has been voided."
      },
      "423": {
        "description": "This carrier does not support voiding registered collections."
      }
    }
  }
}
