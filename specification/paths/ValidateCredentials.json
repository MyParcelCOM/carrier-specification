{
  "get": {
    "tags": [
      "ValidateCredentials"
    ],
    "summary": "Validate credentials.",
    "description": "This endpoint validates the credentials in the headers with the system of the carrier.",
    "responses": {
      "200": {
        "description": "The credentials are valid.",
        "schema": {
          "type": "object",
          "required": [
            "valid"
          ],
          "additionalProperties": false,
          "properties": {
            "valid": {
              "type": "boolean",
              "example": true,
              "default": true
            }
          }
        }
      },
      "400": {
        "description": "The credentials are not valid.",
        "schema": {
          "type": "object",
          "required": [
            "valid",
            "message"
          ],
          "additionalProperties": false,
          "properties": {
            "valid": {
              "type": "boolean",
              "example": false,
              "default": false
            },
            "message": {
              "type": "string",
              "example": "The credentials are invalid"
            }
          }
        }
      }
    }
  }
}
