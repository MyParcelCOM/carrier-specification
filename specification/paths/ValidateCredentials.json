{
  "post": {
    "tags": [
      "ValidateCredentials"
    ],
    "summary": "Validate credentials.",
    "description": "This endpoint validates given credentials with the system of the carrier.",
    "parameters": [
      {
        "in": "body",
        "name": "credentials",
        "description": "The credentials to be validated.",
        "required": true,
        "schema": {
          "type": "object",
          "required": [
            "credentials"
          ],
          "additionalProperties": false,
          "properties": {
            "credentials": {
              "type": "object",
              "example": {
                "api_secret": "your_api_secret",
                "api_key": "your_api_key"
              }
            }
          }
        }
      }
    ],
    "responses": {
      "200": {
        "description": "The credentials are valid.",
        "schema": {
          "type": "object",
          "required": [
            "valid"
          ],
          "additionalProperties": false,
          "properties": {
            "valid": {
              "type": "boolean",
              "example": true,
              "default": true
            }
          }
        }
      },
      "400": {
        "description": "The credentials are not valid.",
        "schema": {
          "type": "object",
          "required": [
            "valid"
          ],
          "additionalProperties": false,
          "properties": {
            "valid": {
              "type": "boolean",
              "example": false,
              "default": false
            },
            "message": {
              "type": "string",
              "example": "The credentials are invalid"
            }
          }
        }
      }
    }
  }
}
